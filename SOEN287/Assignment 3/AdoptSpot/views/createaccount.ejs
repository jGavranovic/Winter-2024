<body>
    <%- include('includes/header.ejs') -%>
    <div class="center">
        <div class="menu">
            <ul>
                <li><a href="/">Home</a></li>
                <!-- <li><a href="browse">Browse Available Pets</a></li> -->
                <li><a href="find">Find a dog/cat</a></li>
                <li><a href="dog-care">Dog Care</a></li>
                <li><a href="cat-care">Cat Care</a></li>
                <li><a href="createaccount" class="active">Create Account</a></li>
                <li><a href="giveaway">Have a pet to give away</a></li>
                <li><a href="contact">Contact Us</a></li>
                <% if (typeof authenticated !== 'undefined' && authenticated) {%>
                    <li><a href="logout">Logout</a></li>
                    <% } %>
            </ul>
        </div>
        <div class="content">
            <h1>Create an Account</h1>
            <p>Usernames may only contain letters and digits. <br> Passwords must be at least 4 characters long, be alphanumeric, contain at least one letter, and contain at least one digit</p>
            <form action="/createaccount" method="POST" onsubmit="return validAccountCreation(this)">
                <label for="username">Username: </label>
                <input type="text" id="username" name="username" required><% if (taken) {%> <span class="alert">USERNAME ALREADY TAKEN</span><% }%><br><br>
                <label for="password">Password: </label>
                <input type="password" id="password" name="password" required><br><br>
                <input type="submit" value="Submit"><% if (success){%><span class='success'>ACCOUNT SUCCESSFULLY CREATED</span><% }%>
            </form>
        </div>
    </div>
